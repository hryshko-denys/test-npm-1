{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "rootDir": ".",
    "outDir": "./lib/src",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./lib"]
}
